<h1>My Order</h1>

<%= form_for(@order, html: {class: "form-horizontal"}) do |f| %>
    <% if @order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

          <ul>
            <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phone %><br>
      <%= f.text_field :phone, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email%><br>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :organization_name %><br>
      <%= f.text_field :organization_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :organization_desc %><br>
      <%= f.text_area :organization_desc, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :web_url %><br>
      <%= f.text_field :web_url, class: "form-control" %>
    </div>
    <div class="form-group btn-position">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
<% end %>
